<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p>Welcome to <%= title %>
  </p>
  <p>
    <%= customers.length %> clientes cadastrados!
  </p>
  <table>
    <thead>
      <tr>
        <td>Nome</td>
        <td>Idade</td>
        <td>Região</td>
        <td>Ações</td>
      </tr>
    </thead>
    <tbody>
      <% customers.forEach(item=> {
        %>
        <tr>
          <td>
            <%= item.nome %>
          </td>
          <td>
            <%= item.idade %>
          </td>
          <td>
            <%= item.cidade %>
              <%= item.uf %>
          </td>
          <td><a href="/edit/<%= item._id %>">
              <img src="/images/edit.png" title="Editar">
            </a><a href="/delete/<%= item._id %>">
              <img src="/images/delete.png" title="Deletar"
                onclick=" return confirm('Tem certeza que deseja excluir esse cliente?')">
            </a></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <hr>
  <a href="/new">Cadastar Novo</a>
</body>

</html>